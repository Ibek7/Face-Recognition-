# Monitoring and Metrics Configuration

# Prometheus metrics endpoint
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Application metrics to collect
COLLECT_REQUEST_METRICS=true
COLLECT_PERFORMANCE_METRICS=true
COLLECT_BUSINESS_METRICS=true
COLLECT_SYSTEM_METRICS=true

# Request metrics
TRACK_REQUEST_DURATION=true
TRACK_REQUEST_SIZE=true
TRACK_RESPONSE_SIZE=true
TRACK_STATUS_CODES=true

# Performance metrics
TRACK_DETECTION_TIME=true
TRACK_RECOGNITION_TIME=true
TRACK_EMBEDDING_GENERATION_TIME=true
TRACK_DATABASE_QUERY_TIME=true

# Business metrics
TRACK_FACE_COUNT=true
TRACK_PERSON_COUNT=true
TRACK_RECOGNITION_SUCCESS_RATE=true
TRACK_RECOGNITION_CONFIDENCE=true

# System metrics
TRACK_CPU_USAGE=true
TRACK_MEMORY_USAGE=true
TRACK_DISK_USAGE=true
TRACK_NETWORK_USAGE=true

# Alerting thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=85
ALERT_DISK_THRESHOLD=90
ALERT_ERROR_RATE_THRESHOLD=5
ALERT_RESPONSE_TIME_THRESHOLD=1000

# Metrics retention
METRICS_RETENTION_DAYS=30

# Export configuration
EXPORT_TO_PROMETHEUS=true
EXPORT_TO_GRAFANA=false
EXPORT_TO_DATADOG=false

# Prometheus pushgateway (if using)
PROMETHEUS_PUSHGATEWAY_URL=
PROMETHEUS_PUSH_INTERVAL=60

# Custom labels
METRICS_ENVIRONMENT=production
METRICS_SERVICE_NAME=face-recognition-api
METRICS_VERSION=1.0.0

# Health check configuration
HEALTHCHECK_INTERVAL=30
HEALTHCHECK_TIMEOUT=10
HEALTHCHECK_RETRIES=3

# Logging for metrics
LOG_METRICS=true
METRICS_LOG_LEVEL=INFO
