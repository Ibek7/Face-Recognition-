{
  "dashboard": {
    "title": "Face Recognition System Monitoring",
    "tags": ["face-recognition", "api", "performance"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"face-recognition\"}[5m])",
            "legendFormat": "{{method}} {{endpoint}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"face-recognition\"}[5m]))",
            "legendFormat": "{{endpoint}} p95",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, rate(http_request_duration_seconds_bucket{job=\"face-recognition\"}[5m]))",
            "legendFormat": "{{endpoint}} p99",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"face-recognition\",status=~\"5..\"}[5m])",
            "legendFormat": "{{endpoint}} 5xx errors",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"face-recognition\",status=~\"4..\"}[5m])",
            "legendFormat": "{{endpoint}} 4xx errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Errors/sec"},
          {"format": "short"}
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {"params": [0.1], "type": "gt"},
              "operator": {"type": "and"},
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "1m",
          "handler": 1,
          "name": "High Error Rate",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"face-recognition\"}[5m]) * 100",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"face-recognition\"} / 1024 / 1024",
            "legendFormat": "Memory MB",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "mbytes", "label": "Memory"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Active Requests",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "http_requests_in_progress{job=\"face-recognition\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          }
        }
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 16},
        "targets": [
          {
            "expr": "db_connections_active{job=\"face-recognition\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area"
        }
      },
      {
        "id": 8,
        "title": "Face Detection Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "targets": [
          {
            "expr": "rate(face_detections_total{job=\"face-recognition\"}[5m])",
            "legendFormat": "Detections/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Detections/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 9,
        "title": "Face Recognition Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "targets": [
          {
            "expr": "rate(face_recognitions_total{job=\"face-recognition\"}[5m])",
            "legendFormat": "Recognitions/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "ops", "label": "Recognitions/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 10,
        "title": "Model Inference Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(model_inference_duration_seconds_bucket{job=\"face-recognition\"}[5m]))",
            "legendFormat": "{{model}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Inference Time"},
          {"format": "short"}
        ]
      },
      {
        "id": 11,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "targets": [
          {
            "expr": "rate(cache_hits_total{job=\"face-recognition\"}[5m]) / (rate(cache_hits_total{job=\"face-recognition\"}[5m]) + rate(cache_misses_total{job=\"face-recognition\"}[5m])) * 100",
            "legendFormat": "Cache Hit Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "Hit Rate %", "max": 100},
          {"format": "short"}
        ]
      },
      {
        "id": 12,
        "title": "Database Query Duration",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 36},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(db_query_duration_seconds_bucket{job=\"face-recognition\"}[5m]))",
            "legendFormat": "{{query_type}} p95",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "s", "label": "Query Duration"},
          {"format": "short"}
        ]
      },
      {
        "id": 13,
        "title": "Total Persons",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 36},
        "targets": [
          {
            "expr": "persons_total{job=\"face-recognition\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 14,
        "title": "Total Embeddings",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 36},
        "targets": [
          {
            "expr": "embeddings_total{job=\"face-recognition\"}",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 15,
        "title": "Request Size Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 44},
        "targets": [
          {
            "expr": "rate(http_request_size_bytes_bucket{job=\"face-recognition\"}[5m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ]
      },
      {
        "id": 16,
        "title": "Response Size Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 44},
        "targets": [
          {
            "expr": "rate(http_response_size_bytes_bucket{job=\"face-recognition\"}[5m])",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ]
      }
    ]
  }
}
