# Face Recognition System - Environment Configuration
# Copy this file to .env and update values as needed

# ============================================
# Database Configuration
# ============================================
# SQLite (default for local development)
DATABASE_URL=sqlite:///face_recognition.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/face_recognition

# ============================================
# API Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Enable auto-reload in development
API_RELOAD=true

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# Face Recognition Settings
# ============================================
# Similarity threshold for face matching (0.0-1.0)
RECOGNITION_THRESHOLD=0.7

# Maximum number of similar faces to return
TOP_K_RESULTS=5

# Face detection confidence threshold
DETECTION_CONFIDENCE=0.8

# Minimum face size for detection (pixels)
MIN_FACE_SIZE=30

# Face padding for extraction (0.0-1.0)
FACE_PADDING=0.2

# ============================================
# Model Configuration
# ============================================
# Encoder type: simple, facenet, arcface, vggface
ENCODER_TYPE=simple

# Path to pre-trained model weights (if using custom models)
MODEL_WEIGHTS_PATH=models/weights/

# Model cache directory
MODEL_CACHE_DIR=.cache/models/

# ============================================
# Performance & Caching
# ============================================
# Enable caching for embeddings
ENABLE_CACHING=true

# Cache TTL in seconds
CACHE_TTL=3600

# Maximum cache size (MB)
CACHE_MAX_SIZE=512

# Number of worker threads for batch processing
BATCH_WORKERS=4

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to log to console only)
LOG_FILE=logs/face_recognition.log

# Maximum log file size (MB)
LOG_MAX_SIZE=100

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# ============================================
# Monitoring & Metrics
# ============================================
# Enable performance monitoring
ENABLE_MONITORING=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# Enable system resource monitoring
ENABLE_SYSTEM_MONITORING=true

# ============================================
# Security Settings
# ============================================
# API authentication token (set for production)
API_TOKEN=

# Enable API rate limiting
ENABLE_RATE_LIMITING=true

# Rate limit: requests per minute
RATE_LIMIT_PER_MINUTE=60

# Maximum upload file size (MB)
MAX_UPLOAD_SIZE=10

# ============================================
# Storage Configuration
# ============================================
# Directory for uploaded images
UPLOAD_DIR=data/uploads/

# Directory for processed images
OUTPUT_DIR=data/output/

# Directory for temporary files
TEMP_DIR=/tmp/face_recognition/

# ============================================
# Real-time Processing
# ============================================
# Default video source (0 for webcam, or video file path)
VIDEO_SOURCE=0

# Frame processing rate (FPS)
PROCESSING_FPS=10

# Display results in real-time
DISPLAY_RESULTS=true

# ============================================
# Advanced Features
# ============================================
# Enable distributed processing
ENABLE_DISTRIBUTED=false

# Redis URL for distributed caching
REDIS_URL=redis://localhost:6379/0

# Enable GPU acceleration (requires CUDA)
ENABLE_GPU=false

# GPU device ID
GPU_DEVICE=0

# ============================================
# Development & Debug
# ============================================
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE=false

# Enable API request/response logging
LOG_API_REQUESTS=false

# Profile performance (generates profiling reports)
ENABLE_PROFILING=false
